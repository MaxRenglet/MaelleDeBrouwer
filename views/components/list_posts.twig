<div class="columns is-multiline">
	{% for key, post in posts %}
		{% set img = fn.get_the_post_thumbnail_url(post.ID, 'post-thumbnail') %}
		{% if loop.first %}
			{% set column = "is-6-widescreen is-12-desktop is-12-tablet is-12-mobile" %}
		{% else %}
			{% set column = "is-3-widescreen is-6-desktop is-6-tablet is-12-mobile" %}
		{% endif %}


		<div class="column {{column}}">
			<a href="{{fn.get_permalink(post.ID)}}">
				{% include '/components/layout/card.twig' with {post:post, image: img, content:post.post_content, title:post.post_title, date:true} %}
			</a>
		</div>
	{% endfor %}
</div>
